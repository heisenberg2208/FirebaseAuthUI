<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:id="@+id/btnInfo"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">


            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/info"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="आपण आपल्यासाठी फायदेशीर असेल अशा सर्व वनस्पतींबद्दल माहिती मिळेल"
                android:padding="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Information"/>

        </LinearLayout>


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:id="@+id/btnQuery"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">


            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/query"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="आपण आमच्या तज्ज्ञ शास्त्रज्ञांकडे विचारू शकता, जे आपल्याला रोपण केव्हा आणि केव्हा रोपण करावे याबद्दल मार्गदर्शन करतील"
                android:padding="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Query"/>

        </LinearLayout>


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnSell"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">


            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/sell"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="आपण येथे आपली पिके विकू शकता आणि त्यासाठी योग्य मूल्य मिळवू शकता आणि आपल्या खरेदीदारांशी संपर्क साधा"
                android:padding="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Selling Portal"/>

        </LinearLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>


